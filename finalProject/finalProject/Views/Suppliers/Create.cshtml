@model finalProject.Models.Supplier

@{
    ViewData["Title"] = "יצירת ספק";
}

<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script src="~/Scripts/bootstrap.min.js"></script>

<div class="container" dir="rtl">
    <div style="width: 50%;margin-left: auto;margin-right: auto;">
        <div style="width:50%; margin-left: 50%;margin-right: 37%;">
            <h2 style="font-weight: bold; display:inline-block; align-content:center;">
                הוספת ספק
            </h2>
        </div>
        <br />
        <br />
        <div class='form-container'>
            <form action="@Url.Action("Create")" method="post" class='form' enctype="multipart/form-data">
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <label for="createSupplierFormName">שם הספק:</label>
                        <div>
                            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label for="createSupplierForm">קובץ תמונת הספק:</label>
                    <input type="file" name="file" />
                </div>

                <div class="form-group">
                    <input type="submit" value="צור" class="btn btn-success" /> |
                    @Html.ActionLink("חזור לרשימת הספקים", "Index")
                </div>
            </form>
        </div>
    </div>
</div>

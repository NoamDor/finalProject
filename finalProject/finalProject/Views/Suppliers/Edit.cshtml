@model finalProject.Models.Supplier
@{
   // Layout = null;
}

<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script src="~/Scripts/bootstrap.min.js"></script>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="container" dir="rtl">
        <div style="width: 50%;margin-left: auto;margin-right: auto;">
            <div style="width:50%; margin-left: 50%;margin-right: 37%;">
                <h2 style="font-weight: bold; display:inline-block; align-content:center;">
                    עריכת ספק
                </h2>
            </div>
            <br />
            <br />
            <div class="well">
                <div class="form-horizontal">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.Id)

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <label for="createSupplierFormName">שם הספק:</label>
                            <div>
                                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
               @*                 @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })*@
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <label for="createSupplierFormName">קובץ תמונת הספק:</label>
                            <div>
                                @Html.EditorFor(model => model.PictureName, new { htmlAttributes = new { @class = "form-control" } })
                                @*@Html.ValidationMessageFor(model => model.PictureName, "", new { @class = "text-danger" })*@
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="שמור" class="btn btn-success" /> |
                            @Html.ActionLink("חזור לרשימת הספקים", "Index")
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

@model finalProject.Models.Product

<div class='page-title-container'>
    <h2 class='page-title'>מחיקת מוצר</h2>
</div>

<div class='form-container'>
    <h3>האם אתה בטוח שברצונך למחוק מוצר זה?</h3>
    @using (Html.BeginForm("Delete", "Products", FormMethod.Post, new { @class = "form" }))
    {
        @Html.AntiForgeryToken()
        <img style="height: 10vh;width: 6vw; margin-bottom: 5%;"
             src=@System.String.Format("/Images/Products/{0}", Model.PictureName) />
        <div>
            @Html.LabelFor(model => model.Name, new { @class = "form-label" })
            @Html.DisplayFor(model => model.Name)
        </div>
        <div>
            @Html.LabelFor(model => model.Size, new { @class = "form-label" })
            @Html.DisplayFor(model => model.Size)
        </div>
        <div>
            @Html.LabelFor(model => model.Price, new { @class = "form-label" })
            @Html.DisplayFor(model => model.Price)
        </div>
        <div>
            @Html.LabelFor(model => model.ProductType, new { @class = "form-label" })
            @Html.DisplayFor(model => model.ProductType.Name)
        </div>
        <div>
            @Html.LabelFor(model => model.Supplier, new { @class = "form-label" })
            @Html.DisplayFor(model => model.Supplier.Name)
        </div>
        <div class='form-group form-footer'>
            <input type="hidden" value="@Model.Id" />
            <input type="submit" value="מחק" class="submit-form-button btn btn-danger" />
            @Html.ActionLink("לרשימה המלאה", "Index", "Products", null, new { @class = "full-list-action" })
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
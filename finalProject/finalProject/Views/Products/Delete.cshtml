@model finalProject.Models.Product

<div class='page-title-container'>
    <h2 class='page-title'>מחיקת מוצר</h2>
</div>

<div class='form-container'>
    <h3>האם אתה בטוח שברצונך למחוק מוצר זה?</h3>
    <form action="@Url.Action("Delete")" class='form' method="post">
        @Html.AntiForgeryToken()
        <img style="height: 10vh;width: 6vw; margin-bottom: 5%;"
             src=@System.String.Format("/Content/Images/{0}", Model.PictureName) />
        <div>
            <label class="delete-label">@Html.DisplayNameFor(model => model.Name):</label>
            @Html.DisplayFor(model => model.Name)
        </div>
        <div>
            <label class="delete-label">@Html.DisplayNameFor(model => model.Size):</label>
            @Html.DisplayFor(model => model.Size)
        </div>
        <div>
            <label class="delete-label">@Html.DisplayNameFor(model => model.Price):</label>
            @Html.DisplayFor(model => model.Price)
        </div>
        <div>
            <label class="delete-label">@Html.DisplayNameFor(model => model.ProductType):</label>
            @Html.DisplayFor(model => model.ProductType.Name)
        </div>
        <div>
            <label class="delete-label">@Html.DisplayNameFor(model => model.Supplier):</label>
            @Html.DisplayFor(model => model.Supplier.Name)
        </div>
        <div class='form-group form-footer'>
            <input type="hidden" value="@Model.Id" />
            <input type="submit" value="מחק" class="submit-form-button btn btn-default" />
            @Html.ActionLink("לרשימה המלאה", "Index", "Products", null, new { @class = "full-list-action" })
        </div>
    </form>
</div>

@model finalProject.Models.Branch

@{
    ViewData["Title"] = "מחיקת סניף";
}

<div class='page-title-container'>
    <h2 class='page-title'>מחיקת סניף</h2>
</div>

<div class='form-container'>
    <h3>האם אתה בטוח שברצונך למחוק סניף זה?</h3>
    @using (Html.BeginForm("Delete", "Branches", FormMethod.Post, new { @class = "form" }))
    {
        @Html.AntiForgeryToken()
        <div>
            @Html.LabelFor(model => model.City, new { @class = "form-label" })
            @Html.DisplayFor(model => model.City)
        </div>
        <div>
            @Html.LabelFor(model => model.Address, new { @class = "form-label" })
            @Html.DisplayFor(model => model.Address)
        </div>
        <div>
            @Html.LabelFor(model => model.Telephone, new { @class = "form-label" })
            @Html.DisplayFor(model => model.Telephone)
        </div>
        <div>
            @Html.LabelFor(model => model.Long, new { @class = "form-label" })
            @Html.DisplayFor(model => model.Long)
        </div>
        <div>
            @Html.LabelFor(model => model.Lat, new { @class = "form-label" })
            @Html.DisplayFor(model => model.Lat)
        </div>
        <div class='form-group form-footer'>
            <input type="hidden" value="@Model.Id" />
            <input type="submit" value="מחק" class="submit-form-button btn btn-danger" />
            @Html.ActionLink("לרשימה המלאה", "Index", "Branches", null, new { @class = "full-list-action" })
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
        <!-- Register Form -->
        @using (Html.BeginForm("Register", "Users", FormMethod.Post,
        new { enctype = "multipart/form-data", @id = "register-form" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">
                @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "register-form-input fadeIn second", @placeholder = "שם משתמש" } })
                <div dir="rtl">
                    @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @type = "password", @class = "register-form-input fadeIn third", @placeholder = "סיסמא" } })
                <div dir="rtl">
                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @class = "register-form-input fadeIn fourth", @placeholder = "כתובת מגורים" } })
                <div dir="rtl">
                    @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.EditorFor(model => model.BirthDate, new { htmlAttributes = new { onfocus = "(this.type='date')" , @class = "register-form-input fadeIn fifth", @placeholder = "תאריך לידה" } })
                <div dir="rtl">
                    @Html.ValidationMessageFor(model => model.BirthDate, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.EditorFor(model => model.Telephone, new { htmlAttributes = new { @class = "register-form-input fadeIn six", @placeholder = "טלפון" } })
                <div dir="rtl">
                    @Html.ValidationMessageFor(model => model.Telephone, "", new { @class = "text-danger" })
                </div>
            </div>
            <div dir="rtl" class="form-group">
                <label class="fadeIn six">
                    @Html.EditorFor(model => model.Gender, new { htmlAttributes = new { @type = "radio", @class = "register-form-input", @name = "GenderRadio", @value = "0" } })
                    זכר
                </label>
                <label class="female-radio fadeIn six">
                @Html.EditorFor(model => model.Gender, new { htmlAttributes = new { @type = "radio", @class = "register-form-input", @name = "GenderRadio", @value = "1" } })
                    נקבה
                </label>
                <div>
                    @Html.ValidationMessageFor(model => model.Gender, "", new { @class = "text-danger" })
                </div>
            </div>
            <input id="register-button" type="submit" class="fadeIn six" value="הרשם">
        }

        <div id="formFooter">
            <a class="underlineHover-Login green-text" href="/Users/Login" dir="rtl">כבר יש לך משתמש ? לחץ להתחברות</a>
        </div>
    </div>
</div>

